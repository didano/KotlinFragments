<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/basic_image_margin"
    app:cardCornerRadius="@dimen/basic_cardview_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemMainImageView"
            android:layout_width="@dimen/secondary_image_side"
            android:layout_height="@dimen/basic_image_side"
            android:layout_margin="@dimen/basic_image_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/itemMainHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/basic_text_margin"
            android:text="@string/mock_header_text"
            android:textColor="@android:color/black"
            android:textSize="@dimen/basic_header_text_size"
            app:layout_constraintBottom_toTopOf="@+id/itemMainDescTextView"
            app:layout_constraintStart_toEndOf="@id/itemMainImageView"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemMainDescTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/basic_text_margin"
            android:text="@string/mock_description_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemMainImageView"
            app:layout_constraintTop_toBottomOf="@+id/itemMainHeaderTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>