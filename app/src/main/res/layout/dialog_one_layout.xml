<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/mobile_dialog_basic_width"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.AppCompat.Dialog.NoFloating"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="50dp">

    <TextView
        android:id="@+id/mainDialogHeadTextView"
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="@dimen/dialog_header_text_size"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="@string/mock_header_text"/>

    <LinearLayout
        android:layout_marginTop="@dimen/small_top_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="1"
            android:id="@+id/mainDialogDescTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            tools:text="@string/mock_description_text"/>
    </LinearLayout>

</LinearLayout>