<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/basic_text_margin"
    app:cardCornerRadius="@dimen/basic_cardview_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemSecImageView"
            android:layout_width="@dimen/secondary_image_side"
            android:layout_height="@dimen/secondary_image_side"
            android:layout_margin="@dimen/basic_image_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/itemSecHeaderTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/basic_text_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/issue_header_text_size"
            app:layout_constraintBottom_toTopOf="@+id/itemSecDescTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemSecImageView"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Article Header" />

        <TextView
            android:id="@+id/itemSecDescTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/basic_text_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemSecImageView"
            app:layout_constraintTop_toBottomOf="@+id/itemSecHeaderTextView"
            app:layout_constraintVertical_bias="0.529"
            tools:text="@string/mock_description_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>